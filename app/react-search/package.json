{
  "name": "react-search",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-vendor": "browserify --require react --require react-dom --outfile build/js/vendor.js",
    "watch-js": "watchify --external react --external react-dom src/js/search.js --outfile build/js/script.js --poll --debug --verbose",
    "sync": "browser-sync start --port 3000 --ui-port 3001 --files 'build/js/script.js, *.html' "
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.0",
    "browserify": "^12.0.1",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "watchify": "^3.6.1"
  }
}
